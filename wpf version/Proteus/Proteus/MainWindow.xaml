<Window x:Class="Proteus.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        xmlns:local="clr-namespace:Proteus.View"
   Title="MainWindow" Height="350" Width="500">
    <StackPanel Background="Gray">
        <Label x:Name="L1" Height="50" Background="LightGray" HorizontalContentAlignment="Center"
         FontSize="24" Content="Welcome to Proteus RPG Builder"  />
        <Button Height="50"  Margin="50 50" HorizontalContentAlignment="Center" FontSize="24"
                Content="Create New Ruleset" Click="NewGame"  />
        <Button  Height="50"  Margin="50 0 50 50" HorizontalContentAlignment="Center" FontSize="24" Click="LoadGame" >
            Load Existing Ruleset 
            <Button.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="First file"/>
                    <MenuItem Header="Second file"/>
                    <MenuItem Header="Third file"/>
                    <MenuItem Header="Fourth file"/>
                </ContextMenu>
            </Button.ContextMenu>
        </Button>
    </StackPanel>
</Window>