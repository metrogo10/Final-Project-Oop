<Window x:Class="Proteus.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:guiDemo"
        mc:Ignorable="d"
        Title="MainWindow" Height="550" Width="525">
    <StackPanel Background="White" Margin="0,0,0,-15">
        <Label x:Name="L1" Height="50" Background="LightGray"  Margin="20 50" HorizontalContentAlignment="Center"
         FontSize="24" Content="Welcome to Proteus RPG Builder"  />
        <Button Height="50"  Margin="20 50" HorizontalContentAlignment="Center" FontSize="24"
                Content="Create New Ruleset"  Click="firstName_Click"/>
        <Button Height="50"  Margin="20 50" HorizontalContentAlignment="Center" FontSize="24"
                Content="Load Existing Ruleset"  Click="lastName_Click"/>
    </StackPanel>
</Window>